# 数据库配置
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/translation_db
REDIS_URL=redis://localhost:6379

# JWT配置
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI API密钥配置
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_claude_api_key_here
GOOGLE_API_KEY=your_google_translate_api_key_here

# 百度翻译API
BAIDU_APP_ID=your_baidu_app_id_here
BAIDU_SECRET_KEY=your_baidu_secret_key_here

# 有道翻译API
YOUDAO_APP_KEY=your_youdao_app_key_here
YOUDAO_APP_SECRET=your_youdao_app_secret_here

# 腾讯翻译API
TENCENT_SECRET_ID=your_tencent_secret_id_here
TENCENT_SECRET_KEY=your_tencent_secret_key_here

# 应用配置
DEBUG=True
CORS_ORIGINS=["http://localhost:3000", "http://localhost:12000"]
MAX_TRANSLATION_LENGTH=10000
RATE_LIMIT_PER_MINUTE=100

# 文件上传配置
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=["txt", "docx", "pdf", "srt"]

# 缓存配置
CACHE_TTL=3600  # 1小时
TRANSLATION_CACHE_TTL=86400  # 24小时